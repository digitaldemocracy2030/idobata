# .env.production.template - このファイルを .env.production にコピーし、実際の値を設定してください
# 本番環境用の環境変数設定ファイルです。
# 【重要】`.env.production` ファイル自体は Git にコミットしないでください。

# --- General ---
# サーバーの実行環境を指定します (本番環境では必ず production に設定)
NODE_ENV=production

# --- Domain Configuration ---
# 本番環境のドメイン名 (Nginxの設定と一致させる)
PRODUCTION_DOMAIN=your_production_domain.com

# --- Security Settings ---
# JWT認証用のシークレットキー (強力なランダム文字列を使用)
# 生成方法: openssl rand -hex 32
JWT_SECRET=generate_a_strong_secret_key_here
JWT_EXPIRES_IN=1d

# --- Database Credentials ---
# MongoDB認証情報
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=secure_password_here
MONGODB_URI=mongodb://admin:secure_password_here@mongo:27017/idea_discussion_db?authSource=admin

# PostgreSQL認証情報
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secure_password_here
POSTGRES_DB=policy_db
DATABASE_URL=postgresql://postgres:secure_password_here@postgres-policy:5432/policy_db

# --- API Keys ---
# OpenRouter API Key (LLM連携用)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# OpenAI API Key (Python Embedding Service用)
OPENAI_API_KEY=your_openai_api_key_here

# --- GitHub Integration ---
# GitHub App設定
GITHUB_APP_ID=your_github_app_id_here
GITHUB_INSTALLATION_ID=your_github_app_installation_id_here
GITHUB_TARGET_OWNER=your_github_username_or_org_here
GITHUB_TARGET_REPO=your_target_repository_name_here
GITHUB_BASE_BRANCH=main

# --- CORS Settings ---
# 本番環境でのCORS設定 (フロントエンドのドメインを指定)
IDEA_CORS_ORIGIN=https://your_production_domain.com
POLICY_CORS_ORIGIN=https://your_production_domain.com

# --- Frontend API Base URLs ---
# 本番環境でのAPI URL (Nginxのルーティングに合わせる)
IDEA_FRONTEND_API_BASE_URL=https://your_production_domain.com/api/idea
POLICY_FRONTEND_API_BASE_URL=https://your_production_domain.com/api/policy
ADMIN_API_BASE_URL=https://your_production_domain.com/api/idea

# --- Frontend Settings ---
# 本番環境でのホスト設定
VITE_FRONTEND_ALLOWED_HOSTS=your_production_domain.com
VITE_POLICY_FRONTEND_ALLOWED_HOSTS=your_production_domain.com
VITE_ADMIN_FRONTEND_ALLOWED_HOSTS=your_production_domain.com

# --- Admin Settings ---
# テーマ削除機能の有効/無効 (true/false)
ALLOW_DELETE_THEME=false
