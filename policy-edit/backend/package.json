{
  "name": "idobata-policy-editor-backend",
  "version": "1.0.0",
  "description": "Backend for GitHub repository browser with MCP-enabled chatbot",
  "main": "build/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:mcp": "cd ../mcp && npm run build",
    "start": "node build/index.js",
    "typecheck": "tsc --noEmit",
    "dev": "nodemon",
    "lint": "biome check .",
    "format": "biome check --write .",
    "test": "vitest run --passWithNoTests",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "node --loader ts-node/esm src/db/migrate.ts",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.9.0",
    "@types/pg": "^8.15.1",
    "better-auth": "^1.2.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.31.1",
    "drizzle-orm": "^0.43.1",
    "express": "^4.18.2",
    "openai": "^4.28.0",
    "pg": "^8.16.0"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.2.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.5",
    "nodemon": "^3.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^3.1.2"
  }
}
