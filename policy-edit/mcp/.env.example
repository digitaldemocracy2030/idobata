LOG_LEVEL=info

# GitHub App Configuration
GITHUB_APP_ID=your_app_id
# Private key PEM content (escape \n as \\n) OR path to the .pem file
GITHUB_APP_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----"
# or GITHUB_APP_PRIVATE_KEY=./path/to/your-private-key.pem
GITHUB_INSTALLATION_ID=your_installation_id

# Target Repository Configuration
GITHUB_TARGET_OWNER=target_github_owner
GITHUB_TARGET_REPO=target_github_repo
GITHUB_BASE_BRANCH=main # Optional: Default branch to create PRs against

# Optional: GitHub Enterprise Server URL
# GITHUB_API_BASE_URL=https://your.ghe.domain/api/v3